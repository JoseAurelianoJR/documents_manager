<h1>Listing documents of <%= @user.name%></h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.user_id %></td>
        <td><%= document.title %></td>
        <td><%= document.description %></td>
        <td><%= link_to 'Show', user_document_path(@user, document) %></td>
        <td><%= link_to 'Edit', edit_user_document_path(@user, document) %></td>
        <td><%= link_to 'Destroy', user_document_path(@user, document), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Document', new_user_document_path(@user) %>

<%= link_to "Back to users", users_path%>
